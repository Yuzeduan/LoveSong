<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke android:width="1dp" android:color="#9e9e9e"></stroke>
            <solid android:color="#aad7ccc8"></solid>
            <corners android:radius="20dp"></corners>
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp"></padding>
        </shape>
    </item>

    <item>
        <shape>
            <stroke android:width="1dp" android:color="#9e9e9e"></stroke>
            <solid android:color="#FFFFFF"></solid>
            <corners android:radius="20dp"></corners>
            <padding android:bottom="10dp" android:left="15dp" android:right="15dp" android:top="10dp"></padding>
        </shape>
    </item>
</selector>