<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <ImageView
        android:id="@+id/song_picture_iv"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/song_name_tv"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/song_picture_iv"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="6dp"
        android:text="回收sin"
        />
    <TextView
        android:id="@+id/song_author_tv"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:textColor="@color/lightgrey"
        android:layout_below="@id/song_name_tv"
        android:layout_alignStart="@id/song_name_tv"
        android:layout_marginTop="3dp"
        android:text="张正月,林心怡"/>

    <ImageButton
        android:id="@+id/list_ibn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_song_list"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/next_ibn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/list_ibn"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_next_song"
        android:layout_centerVertical="true"/>

    <ImageButton
        android:id="@+id/play_ibn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toStartOf="@id/next_ibn"
        android:layout_marginEnd="20dp"
        android:background="@drawable/ic_play_song"
        android:layout_centerVertical="true"/>

</RelativeLayout>