<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/head_tv"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="#ebebeb"
        android:gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:paddingStart="8dp"
        />

    <TextView
        android:id="@+id/title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@id/head_tv"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/artist_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/lightgrey"
        android:layout_below="@id/title_tv"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/album_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/lightgrey"
        android:layout_alignBottom="@id/artist_tv"
        android:layout_toEndOf="@id/artist_tv"
        android:layout_marginStart="4dp"
        />

    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/ic_more"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/gainsboro"
        android:layout_below="@id/artist_tv"/>

</RelativeLayout>