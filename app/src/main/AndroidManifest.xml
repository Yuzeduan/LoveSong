<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuzeduan.lovesong">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".util.LoveSongApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".main.view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".recommend.view.BannerDetailActivity" />
        <activity android:name=".search.view.SearchActivity" />
        <activity android:name=".songlist.view.SongListActivity"
            android:label=""
            android:theme="@style/ListActivityTheme"/>
        <activity android:name=".songlist.view.AlbumListActivity"
            android:label=""
            android:theme="@style/ListActivityTheme"/>
    </application>

</manifest>